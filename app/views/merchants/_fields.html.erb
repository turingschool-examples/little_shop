<h2><%= title %></h2><br/>
<section class='detail-form'>
  <%= form_tag path, method: method do %>
    <%= label_tag :name %>
    <%= text_field_tag :name, @merchant.name %>

    <%= label_tag :address %>
    <%= text_field_tag :address, @merchant.address %>

    <%= label_tag :city %>
    <%= text_field_tag :city, @merchant.city %>

    <%= label_tag :state %>
    <%= text_field_tag :state, @merchant.state %>

    <%= label_tag :zip %>
    <%= text_field_tag :zip, @merchant.zip %><br/>
    <br/>

    <%= submit_tag button_text %>
  <% end %>
</section>
