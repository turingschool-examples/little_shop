<!DOCTYPE html>
<html>
  <head>
    <title>MonsterShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <%= link_to 'Merchants', '/merchants' %>
      <%= link_to 'Items', '/items' %>
      <p>Cart: <%= cart.total %></p>
    </nav>

    <% flash.each do |flash_type, flash_message| %>
      <%= flash_message %>
    <% end %>
    <%= yield %>
  </body>
</html>
