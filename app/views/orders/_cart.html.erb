<h2>All Items in Order</h2>
<% @items.each do |item,qty| %>
  <section id='item-<%= item.id %>'>
    <h3><%= link_to item.name, item_path(item) %></h3>
    <p>Sold by: <%= link_to item.merchant.name, merchant_path(item.merchant) %></p>
    <p>Price: <%= number_to_currency(item.price) %></p>
    <p>Quantity: <%= qty %></p>
    <p>Subtotal: <%= number_to_currency(item.price * qty) %></p>
  </section>

  <p>Total: <%= number_to_currency(cart.total_cost) %></p>
<% end %>
