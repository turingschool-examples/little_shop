<h2>Shipping Information</h2>
<section>
  <p><%= @order.name %></p>
  <p><%= @order.address %></p>
  <p><%= @order.city %></p>
  <p><%= @order.state %></p>
  <p><%= @order.zip %></p>
  <p>Order created at: <%= @order.created_at %></p>
</section>


<h2>Order Details</h2>
<section>
<% @order.order_items.each do |oi| %>
  <h2><%= oi.item.name %></h2>
  <h3><%= oi.item.merchant.name %></h3>
  <p>Quantity: <%= oi.quantity %> * Price: <%= oi.price %> = Subtotal: <%= oi.subtotal %></p>
  <% end %>
  <h3>Grand Total: <%= @order.grand_total %></h3>
</section>
