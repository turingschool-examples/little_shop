<%= form_tag("/items/#{@item.id}/reviews") do %>
  <%= label_tag :title %>
  <%= text_field_tag :title %>

  <%= label_tag :content, "Description" %>
  <%= text_field_tag :content %>

  <%= label_tag :rating %>
  <%= number_field_tag :rating, nil, min: 1, max: 5 %>

  <%= submit_tag "Create Review" %>
<% end %>
