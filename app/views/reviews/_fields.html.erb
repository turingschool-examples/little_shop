<h2><%= title %></h2><br/>
<section class='detail-form'>
  <%= form_tag path, method: method do %>
    <%= label_tag :title %>
    <%= text_field_tag :title, @review.title %>

    <%= label_tag :rating %>
    <%= select_tag :rating, options_for_select(['','1','2','3','4','5'], @review.rating.to_s) %>

    <%= label_tag :content %>
    <%= text_field_tag :content, @review.content %><br/>
    <br/>

    <%= submit_tag button_text %>
  <% end %>
</section>
